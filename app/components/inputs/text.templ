package inputs

import "cmp"

type Text struct {
	Name     string
	Value    string
	Classes  string
	Hint     string
	Disabled bool
	Readonly bool
}

templ (ti Text) Comp() {
	<input
		type="text"
		name={ ti.Name }
		value={ ti.Value }
		class={ cmp.Or(ti.Classes, TextInputClasses) }
		if ti.Disabled {
			disabled
		}
		if ti.Readonly {
			readonly
		}
	/>
	if ti.Hint != "" {
		<div class="text-xs font-normal text-gray-500">{ ti.Hint }</div>
	}
}
